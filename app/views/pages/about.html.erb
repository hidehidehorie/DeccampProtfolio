<div class="app-card-container">
  <div class="card">
    <h1>About me</h1>
    <hr>
    <div class="row">
      <div class="col-cm-4">
        <%= image_tag "hidehide.jpg", width: 300, alt: "Portfolio Image", class: "profile-img" %>

        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent_utilized %>%"
                ></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

x
      <div class="col-cm-8">
        <p>Find me in app/views/pages/about.html.erb</p>

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controls="jobHistory"
          >
            Job History
          </button>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controls="education"
          >
            Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-body">
              job1
            </div>
            <div class="card card-body">
              job2
            </div>
          </div>
          <div class="collapse" id="education">
            <div class="card card-body">
              education1
            </div>
            <div class="card card-body">
              education2
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
